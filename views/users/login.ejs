<% layout('layouts/boilerplate') %>
<h1>Login</h1>
<form action="/login" method="POST" class="validated-form" novalidate>
  <div class="mb-3">
    <label class="form-label" for="location">Username</label>
    <input
      class="form-control"
      id="username"
      name="username"
      required
      type="text"
      required
    />
    <div class="valid-feedback">
      Looks Good
    </div>
  </div>

  <div class="mb-3">
    <label class="form-label" for="location">Password</label>
    <input
      class="form-control"
      id="password"
      name="password"
      required
      type="password"
      required
    />
    <div class="valid-feedback">
      Looks Good
    </div>
  </div>
  <button class="btn btn-success">Login</button>
</form>
