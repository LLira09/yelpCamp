<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" class="validated-form" method="POST" novalidate>
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" id="title" name="campground[title]" required type="text">
                <div class="valid-feedback">
                    Looks Good
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" id="location" name="campground[location]" required type="text">
                <div class="valid-feedback">
                    Looks Good
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" id="image" name="campground[image]" required type="text">
                <div class="valid-feedback">
                    Looks Good
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Campground Price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="price-label">$</span>
                    <input aria-describedby="price-label" aria-label="price" class="form-control" id="price" name="campground[price]" placeholder="0.00" required type="text">
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="">Description</label>
                <textarea class="form-control" id="description" name="campground[description]" required></textarea>
            </div>
            <button class="btn btn-success">Add Campground</button>
        </form>

        <a class="btn btn-primary mt-3" href="/campgrounds">All Campgrounds</a>

    </div>
</div>
